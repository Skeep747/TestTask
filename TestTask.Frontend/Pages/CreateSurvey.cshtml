@page
@model TestTask.Frontend.Pages.CreateSurveyModel
@{
    ViewData["Title"] = "Create new Survey";
}

<h1 class="h2 text-center mt-2">Create new Survey</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Survey.Title"></label>
        <input class="form-control" asp-for="Survey.Title" />
    </div>
    <div class="form-group">
        <label asp-for="Survey.Description"></label>
        <textarea class="form-control" asp-for="Survey.Description" rows="10"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Survey.Author"></label>
        <input class="form-control" asp-for="Survey.Author" />
    </div>
    <input class="btn btn-outline-dark" type="submit" value="Create" />
</form>